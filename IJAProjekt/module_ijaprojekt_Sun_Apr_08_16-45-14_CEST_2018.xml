<?xml version="1.0" encoding="UTF-8"?>
<project name="module_ijaprojekt" default="compile.module.ijaprojekt">
  <dirname property="module.ijaprojekt.basedir" file="${ant.file.module_ijaprojekt}"/>
  
  <property name="module.jdk.home.ijaprojekt" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.ijaprojekt" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.ijaprojekt" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.ijaprojekt" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="ijaprojekt.output.dir" value="${module.ijaprojekt.basedir}/out/production/IJAProjekt"/>
  <property name="ijaprojekt.testoutput.dir" value="${module.ijaprojekt.basedir}/out/test/IJAProjekt"/>
  
  <path id="ijaprojekt.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="ijaprojekt.module.production.classpath">
    <path refid="${module.jdk.classpath.ijaprojekt}"/>
    <pathelement location="E:/junit/hamcrest-core-1.3.jar"/>
    <pathelement location="E:/junit/junit-4.12.jar"/>
  </path>
  
  <path id="ijaprojekt.runtime.production.module.classpath">
    <pathelement location="${ijaprojekt.output.dir}"/>
    <pathelement location="E:/junit/hamcrest-core-1.3.jar"/>
    <pathelement location="E:/junit/junit-4.12.jar"/>
  </path>
  
  <path id="ijaprojekt.module.classpath">
    <path refid="${module.jdk.classpath.ijaprojekt}"/>
    <pathelement location="${ijaprojekt.output.dir}"/>
    <pathelement location="E:/junit/hamcrest-core-1.3.jar"/>
    <pathelement location="E:/junit/junit-4.12.jar"/>
  </path>
  
  <path id="ijaprojekt.runtime.module.classpath">
    <pathelement location="${ijaprojekt.testoutput.dir}"/>
    <pathelement location="${ijaprojekt.output.dir}"/>
    <pathelement location="E:/junit/hamcrest-core-1.3.jar"/>
    <pathelement location="E:/junit/junit-4.12.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.ijaprojekt">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.ijaprojekt">
    <patternset refid="excluded.from.module.ijaprojekt"/>
  </patternset>
  
  <path id="ijaprojekt.module.sourcepath">
    <dirset dir="${module.ijaprojekt.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.ijaprojekt" depends="compile.module.ijaprojekt.production,compile.module.ijaprojekt.tests" description="Compile module IJAProjekt"/>
  
  <target name="compile.module.ijaprojekt.production" depends="register.custom.compilers" description="Compile module IJAProjekt; production classes">
    <mkdir dir="${ijaprojekt.output.dir}"/>
    <javac2 destdir="${ijaprojekt.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ijaprojekt}/javac">
      <compilerarg line="${compiler.args.ijaprojekt}"/>
      <bootclasspath refid="ijaprojekt.module.bootclasspath"/>
      <classpath refid="ijaprojekt.module.production.classpath"/>
      <src refid="ijaprojekt.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.ijaprojekt"/>
    </javac2>
    
    <copy todir="${ijaprojekt.output.dir}">
      <fileset dir="${module.ijaprojekt.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.ijaprojekt.tests" depends="register.custom.compilers,compile.module.ijaprojekt.production" description="compile module IJAProjekt; test classes" unless="skip.tests"/>
  
  <target name="clean.module.ijaprojekt" description="cleanup module">
    <delete dir="${ijaprojekt.output.dir}"/>
    <delete dir="${ijaprojekt.testoutput.dir}"/>
  </target>
</project>